################################################################################
# AGENT BEHAVIOUR

master <%= @master %>

<% if (@agentaddress.is_a?(Array)) and (@agentaddress.count > 0) -%>
agentaddress <%= @agentaddress.join(',') %>
<% end -%>

################################################################################
# ACCESS CONTROL

# ------------------------------------------------------------------------------
# Traditional Access Control
<%- [*@ro_community].compact.each do |c| -%>
  <%- [*@ro_network].compact.each do |n| -%>
rocommunity <%= c %> <%= n %>
  <%- end -%>
<%- end -%>
<%- [*@ro_community6].compact.each do |c| -%>
  <%- [*@ro_network6].compact.each do |n| -%>
rocommunity6 <%= c %> <%= n %>
  <%- end -%>
<%- end -%>
<%- [*@rw_community].compact.each do |c| -%>
  <%- [*@rw_network].compact.each do |n| -%>
rwcommunity <%= c %> <%= n %>
  <%- end -%>
<%- end -%>
<%- [*@rw_community6].compact.each do |c| -%>
  <%- [*@rw_network6].compact.each do |n| -%>
rocommunity6 <%= c %> <%= n %>
  <%- end -%>
<%- end -%>

# ------------------------------------------------------------------------------
# VACM Configuration
#       sec.name       source        community
<% @com2sec.each do |c| -%>
com2sec <%= c %>
<% end -%>

<% @com2sec6.each do |c| -%>
com2sec6 <%= c %>
<% end -%>

#       groupName      securityModel securityName
<% @groups.each do |group| -%>
group   <%= group %>
<% end -%>

#       name          incl/excl  subtree             mask(optional)
<% @views.each do |view| -%>
view    <%= view %>
<% end -%>

#       group          context sec.model sec.level prefix read       write notif
<% @accesses.each do |access| -%>
access  <%= access %>
<% end -%>

#       Proxy
<% @proxy.each do |host| -%>
<% if host['extra_opt'] != nil -%>
<% opt = host['extra_opt'] -%>
<% else -%>
<% opt = "" -%>
<% end -%>
<% host['users'].each_pair do |username, creds| %>
<% if creds['privpass'] == nil and  creds['authpass'] == nil -%>
proxy   <%= opt %> -Cn <%= host['context'] %> -v <%= host['version'] %> -u <%= username %> -l noAuthNoPriv  <%= host['hostname'] %>  <%=  host['subtree'] %>
<% elsif creds['privpass'] == nil -%>
proxy   <%= opt %> -Cn <%= host['context'] %> -v <%= host['version'] %> -u <%= username %> -a <%= creds['authtype'] %> -A "<%= creds['authpass'] %>" -l authNoPriv  <%= host['hostname'] %>  <%=  host['subtree'] %>
<% elsif creds['privpass'] != nil and creds['authpass'] != nil -%>
proxy   <%= opt %> -Cn <%= host['context'] %> -v <%= host['version'] %> -u <%= username %> -a <%= creds['authtype'] %> -A "<%= creds['authpass'] %>" -x <%= creds['privtype'] %> -X "<%= creds['privpass'] %>" -l authPriv  <%= host['hostname'] %>  <%=  host['subtree'] %>
<%else -%>
<% end -%>

<% end -%>
<% end -%>
<% @rwusers.each do |user| -%>
rwuser <%= user %>
<% end -%>

# ------------------------------------------------------------------------------
# Typed-View Configuration

################################################################################
# SYSTEM INFORMATION

# ------------------------------------------------------------------------------
# System Group
sysLocation <%= @location %>
sysContact <%= @contact %>
sysServices <%= @services %>
sysName <%= @sysname %>

################################################################################
# EXTENDING AGENT FUNCTIONALITY

<% if @dlmod.any? -%>
# ------------------------------------------------------------------------------
# Dynamically Loadable Modules
<% @dlmod.each do |mod| -%>
dlmod <%= mod %>
<% end -%>

<% end -%>

###############################################################################
## Logging
##

## We do not want annoying "Connection from UDP: " messages in syslog.
## If the following option is set to 'no', snmpd will print each incoming
## connection, which can be useful for debugging.

dontLogTCPWrappersConnects <%= @do_not_log_tcpwrappers %>

